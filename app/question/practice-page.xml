<Page
        class="page"
        loaded="onPageLoaded"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <!--
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!--
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem tap="onDrawerButtonTap">
            <ActionItem.actionView>
                <StackLayout orientation="horizontal">
                    <Label class="action-bar-title fa" text="&#xf044;" tap="goToEditPage"></Label>
                    <Label class="{{ question.flagged? 'action-bar-title fa flagged': 'action-bar-title fa' }}" text="&#xf024;" tap="flag"></Label>
                </StackLayout>
            </ActionItem.actionView>
        </ActionItem>

        <Label class="action-bar-title">
            <label.formattedText>
                <formattedString>
                    <formattedString.spans>
                        <span text="Question "/>
                        <span text="{{ questionNumber }}"/>
                    </formattedString.spans>
                </formattedString>
            </label.formattedText>
        </Label>
    </ActionBar>

    <DockLayout stretchLastChild="true">
        <StackLayout dock="top" height="20dpi">
        </StackLayout>
        <StackLayout dock="bottom">
            <StackLayout class="margin" orientation="horizontal" horizontalAlignment="center"  visibility="{{ question? 'visible': 'collapsed' }}">
                <Button class="btn btn-primary btn-rounded-lg" text="<<" tap="previous" margin="10dpi" width="30%"/>
                <Button class="btn btn-primary btn-rounded-lg" text="Ad" visibility="{{ showAdOnNext ? 'visible' : 'collapsed' }}" tap="next" margin="10dpi" width="30%"/>
                <Button class="btn btn-primary btn-rounded-lg" text=">>" visibility="{{ showAdOnNext ? 'collapsed' : 'visible' }}" tap="next" margin="10dpi" width="30%"/>
                <Button class="btn btn-primary btn-rounded-lg"
                        visibility="{{ question.show ? 'collapsed' : 'visible' }}" text="Answer" tap="showAnswer"
                        margin="10dpi" width="30%"/>
                <Button class="btn btn-primary btn-rounded-lg"
                        visibility="{{ question.show ? 'visible' : 'collapsed' }}" text="Explain" tap="moveToLast"
                        margin="10dpi" width="30%"/>
            </StackLayout>
            <StackLayout id="banner">
            </StackLayout>
        </StackLayout>
        <ScrollView id="scrollView" scrollBarIndicatorVisible="true" onswipe="handleSwipe">
            <StackLayout class="margin">
                <Label text="{{ question.prashna.text }}" textWrap="true"/>
                <image src="{{ question.prashna.image }}" class="question-image" minHeight="40%" visibility="{{ question.prashna.image ? 'visible' : 'collapsed' }}"  stretch="aspectFit"/>
                <GridLayout columns="*,*" rows="auto,auto" visibility="{{ options[0].image ? 'visible' : 'collapsed' }}" class="m-t-10">
                    <StackLayout row="0" col="0"
                                 class="{{ (options[0].show && options[0].correct)? 'correct m-5' : (options[0].show && options[0].selected && !options[0].correct)? 'incorrect m-5': 'not-selected-image' }}" tap="firstOption">
                        <image src="{{ options[0].image }}" class="m-5" visibility="{{ options[0].image ? 'visible' : 'collapsed' }}"/>
                    </StackLayout>
                    <StackLayout row="0" col="1"
                                 class="{{ (options[1].show && options[1].correct)? 'correct m-5' : (options[1].show && options[1].selected && !options[1].correct)? 'incorrect m-5': 'not-selected-image' }}" tap="secondOption">
                        <image src="{{ options[1].image }}" class="m-5" visibility="{{ options[1].image ? 'visible' : 'collapsed' }}"/>
                    </StackLayout>
                    <StackLayout row="1" col="0"
                                 class="{{ (options[2].show && options[2].correct)? 'correct m-5' : (options[2].show && options[2].selected && !options[2].correct)? 'incorrect m-5': 'not-selected-image' }}" tap="thirdOption">
                        <image src="{{ options[2].image }}" class="m-5" visibility="{{ options[2].image ? 'visible' : 'collapsed' }}"/>
                    </StackLayout>
                    <StackLayout row="1" col="1"
                                 class="{{ (options[3].show && options[3].correct)? 'correct m-5' : (options[3].show && options[3].selected && !options[3].correct)? 'incorrect m-5': 'not-selected-image' }}" tap="fourthOption">
                        <image src="{{ options[3].image }}" class="m-5" visibility="{{ options[3].image ? 'visible' : 'collapsed' }}"/>
                    </StackLayout>
                </GridLayout>

                <Repeater items="{{ options }}" row="1" id="optionList" class="m-t-10" visibility="{{ options[0].description ? 'visible' : 'collapsed' }}">
                    <Repeater.itemTemplate>
                        <GridLayout columns="auto,*" class="{{ (show && correct)? 'correct m-y-5' : (show && selected && !correct)? 'incorrect m-y-5': 'not-selected m-y-5' }}" tap="selectOption">
                            <Label col="0" text="{{ tag + '. ' }}"
                                   class="{{ (show && correct)? 'correct m-l-2' : (show && selected && !correct)? 'incorrect m-l-2': 'not-selected m-l-2' }}"
                                   textWrap="true" marginTop="10dpi" marginBottom="10dpi"/>
                            <Label col="1" text="{{ description }}"
                                   class="{{ (show && correct)? 'correct' : (show && selected && !correct)? 'incorrect': 'not-selected' }}"
                                   textWrap="true" marginTop="10dpi" marginBottom="10dpi"/>
                        </GridLayout>
                    </Repeater.itemTemplate>
                </Repeater>
                <Label id="explanationHeader" text="Explanation: " marginTop="20dpi"
                       visibility="{{ question && question.show ? 'visible' : 'collapsed' }}" style="font-weight: bold"
                       textWrap="true"/>
                <Label id="explanation" text="{{ question && question.explanation}}" marginBottom="10"
                       textWrap="true"
                       visibility="{{ question.show ? 'visible' : 'collapsed' }}"/>
                <Label id="defaultExplanation"
                       text="Explanation Coming Soon. Feel free to update it yourself by clicking on following button:)"
                       marginBottom="5dpi" textWrap="true"
                       visibility="{{ question && question.show && !question.explanation ? 'visible' : 'collapsed' }}"/>
                <Button id="suggestionButton" text="Improve Question" class="btn btn-primary" tap="goToEditPage"
                        visibility="{{ question && question.show ? 'visible' : 'collapsed' }}"/>
            </StackLayout>
        </ScrollView>
    </DockLayout>
</Page>
